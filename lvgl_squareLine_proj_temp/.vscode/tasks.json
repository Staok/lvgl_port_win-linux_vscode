{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },  // 指定命令执行所在路径
    "tasks": [
        {
            "label": "(inner)cmake(debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "..",
                "-DCOMPILE_DEBUG=ON"
            ]
        },
        {
            "label": "(inner)make(debug)",
            "type": "shell",
            "command": "mingw32-make.exe", // need use cmake -G "MinGW Makefiles" .., use "Unix Makefiles" will not work
            "args": [
                "-j16"
            ],
            // or the cmd below is the same
            // "command": "cmake",
            // "args": [
            //     "--build . -j16"
            // ],
            "dependsOn":[
                "(inner)cmake(debug)"
            ],
        },

        {
            "label": "(inner)cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                ".."
            ]
        },
        {
            "label": "(inner)make",
            "type": "shell",
            "command": "mingw32-make.exe", // need use cmake -G "MinGW Makefiles" .., use "Unix Makefiles" will not work
            "args": [
                "-j16"
            ],
            // or the cmd below is the same
            // "command": "cmake",
            // "args": [
            //     "--build . -j16"
            // ],
            "dependsOn":[
                "(inner)cmake"
            ],
        },
        {
            "label": "(inner)run",
            "type": "shell",
            "command": "./lvgl_proj.exe",
            "dependsOn":[
                "(inner)make"
            ],
        },
    ]
}
